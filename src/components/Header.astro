---
const currentPath = Astro.url.pathname;
const navItems = [
  { name: 'Home', path: '/' },
  { name: 'People', path: '/people' },
  { name: 'Publications', path: '/publications' },
  { name: 'Dataset', path: '/dataset' },
  { name: 'Join Us', path: '/join' },
];
const isHome = currentPath === '/';
---

<header class={`header ${isHome ? 'header-transparent' : ''}`}>
  <nav class="nav-container">
    <div class="container nav-content">
      <a href="/" class="logo">HAI Lab. @Ewha</a>
      <button class="mobile-menu-toggle" aria-label="Toggle menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
      <ul class="nav-menu">
        {navItems.map(item => (
          <li>
            <a 
              href={item.path} 
              class={currentPath === item.path ? 'active' : ''}
            >
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>

<script>
  const toggle = document.querySelector('.mobile-menu-toggle');
  const menu = document.querySelector('.nav-menu');

  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('active');
    toggle?.classList.toggle('active');
  });
</script>

<style>
  .header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    position: sticky;
    top: 0;
    z-index: 100;
    transition: background 0.3s;
  }

  .header-transparent {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
    position: absolute;
    width: 100%;
    top: 0;
  }

  .nav-container {
    padding: 0.75rem 0;
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: 1.1rem;
    font-weight: 500;
    color: #2c3e50;
    text-decoration: none;
    transition: color 0.3s;
  }

  .header-transparent .logo {
    color: #fff;
  }

  .logo:hover {
    color: #00462A;
  }

  .header-transparent .logo:hover {
    color: rgba(255, 255, 255, 0.8);
  }

  .mobile-menu-toggle {
    display: none;
    flex-direction: column;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .mobile-menu-toggle span {
    width: 25px;
    height: 2px;
    background: #2c3e50;
    margin: 3px 0;
    transition: all 0.3s;
    border-radius: 3px;
  }

  .header-transparent .mobile-menu-toggle span {
    background: #fff;
  }

  .nav-menu {
    display: flex;
    list-style: none;
    gap: 2rem;
  }

  .nav-menu a {
    text-decoration: none;
    color: #2c3e50;
    font-weight: 400;
    font-size: 0.85rem;
    transition: color 0.3s;
    padding: 0.5rem 0;
  }

  .header-transparent .nav-menu a {
    color: #fff;
  }

  .nav-menu a:hover,
  .nav-menu a.active {
    color: #00462A;
  }

  .header-transparent .nav-menu a:hover,
  .header-transparent .nav-menu a.active {
    color: rgba(255, 255, 255, 0.8);
  }

  .nav-menu a.active {
    border-bottom: 2px solid #00462A;
  }

  .header-transparent .nav-menu a.active {
    border-bottom: 2px solid #fff;
  }

  @media (max-width: 768px) {
    .header {
      box-shadow: none;
    }

    .mobile-menu-toggle {
      display: flex;
      z-index: 101;
    }

    .mobile-menu-toggle.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .mobile-menu-toggle.active span:nth-child(2) {
      opacity: 0;
    }

    .mobile-menu-toggle.active span:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -6px);
    }

    .nav-menu {
      position: absolute;
      top: 100%;
      right: 0;
      left: auto;
      flex-direction: column;
      background: transparent;
      padding: 0;
      gap: 0;
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      visibility: hidden;
      transition: max-height 0.3s ease-out, opacity 0.3s ease-out, visibility 0.3s;
    }

    .nav-menu.active {
      max-height: 400px;
      opacity: 1;
      visibility: visible;
      padding: 1rem 0;
      gap: 0.5rem;
    }

    .nav-menu li {
      text-align: right;
      padding: 0;
    }

    .nav-menu a {
      display: block;
      padding: 0.5rem 20px;
      color: #fff !important;
      background: transparent;
      border-bottom: none !important;
      pointer-events: auto;
    }

    .nav-menu:not(.active) a {
      pointer-events: none;
    }

    .header-transparent .nav-menu a {
      color: #fff !important;
    }

    .nav-menu a:hover,
    .nav-menu a.active {
      color: rgba(255, 255, 255, 0.7) !important;
    }

    .header-transparent .nav-menu a:hover,
    .header-transparent .nav-menu a.active {
      color: rgba(255, 255, 255, 0.7) !important;
    }

    .header:not(.header-transparent) .nav-menu a {
      color: #2c3e50 !important;
    }

    .header:not(.header-transparent) .nav-menu a:hover,
    .header:not(.header-transparent) .nav-menu a.active {
      color: #00462A !important;
    }
  }
</style>
