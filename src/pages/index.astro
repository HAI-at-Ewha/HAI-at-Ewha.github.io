          <div class="card-icon">ðŸ”¬</div>
          <h3>Computational Social Science</h3>
          <p>Data mining on diverse areas including networking, security, epidemiology, and medical domains</p>
        </div>
      </div>
    </div>
  </section>

  <!-- News Section -->
  <section class="section news">
    <div class="container">
      <div class="news-layout">
        <!-- Left Column: Title & View All -->
        <div class="news-header">
          <h2 class="news-title">News</h2>
          {hasMoreNews && (
            <button
              class="view-all-btn"
              type="button"
              aria-expanded="false"
              aria-controls="news-archive"
            >
              View All â†’
            </button>
          )}
        </div>

        <!-- Right Column: News Items -->
        <div class="news-content">
          {hasNews ? (
            <>
              {primaryYear && (
                <div class="news-year-section">
                  <div class="news-year">{primaryYear}</div>
                  <div class="news-list">
                    {primaryNews.map((item, index) => (
                      <>
                        <article class="news-item">
                          <span class="news-date">{getMonthLabel(item.data.date)}</span>
                          <p class="news-text">{item.data.title}</p>
                        </article>
                        {index < primaryNews.length - 1 && <div class="news-divider"></div>}
                      </>
                    ))}
                  </div>
                </div>
              )}

              {hasMoreNews && (
                <div class="news-hidden" id="news-archive" aria-hidden="true">
                  {otherNews.map(({ year, items }) => (
                    <div class="news-year-section">
                      <div class="news-year">{year}</div>
                      <div class="news-list">
                        {items.map((item, index) => (
                          <>
                            <article class="news-item">
                              <span class="news-date">{getMonthLabel(item.data.date)}</span>
                              <p class="news-text">{item.data.title}</p>
                            </article>
                            {index < items.length - 1 && <div class="news-divider"></div>}
                          </>
                        ))}
                      </div>
                    </div>
                  ))}
                </div>
              )}
            </>
          ) : (
            <p class="news-empty">News will be updated soon.</p>
          )}
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const viewAllBtn = document.querySelector('.view-all-btn');
    const newsHidden = document.querySelector('#news-archive');

    if (!(viewAllBtn instanceof HTMLButtonElement) || !(newsHidden instanceof HTMLElement)) {
      return;
    }

    const toggleNews = () => {
      const expanded = newsHidden.classList.toggle('expanded');
      viewAllBtn.setAttribute('aria-expanded', expanded ? 'true' : 'false');
      newsHidden.setAttribute('aria-hidden', expanded ? 'false' : 'true');
      viewAllBtn.textContent = expanded ? 'View Less â†‘' : 'View All â†’';
    };

    viewAllBtn.addEventListener('click', toggleNews);
  });
</script>

