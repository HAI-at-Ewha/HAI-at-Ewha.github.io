---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const newsEntries = await getCollection('news');

const sortedNews = [...newsEntries].sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

const featuredNews = sortedNews.find((item) => item.data.featured);
const regularNews = sortedNews.filter((item) => !item.data.featured);

type NewsEntry = (typeof newsEntries)[number];
const newsByYear = new Map<number, NewsEntry[]>();

for (const item of regularNews) {
  const year = item.data.date.getUTCFullYear();
  const bucket = newsByYear.get(year);

  if (bucket) {
    bucket.push(item);
    continue;
  }

  newsByYear.set(year, [item]);
}

const years = Array.from(newsByYear.keys()).sort((a, b) => b - a);
const [primaryYear, ...otherYears] = years;
const primaryNews = primaryYear ? newsByYear.get(primaryYear) ?? [] : [];
const otherNews = otherYears.map((year) => ({
  year,
  items: newsByYear.get(year) ?? [],
}));

const hasMoreNews = otherNews.length > 0;
const hasNews = regularNews.length > 0;

const monthFormatter = new Intl.DateTimeFormat('en', { month: 'short' });
const getMonthLabel = (date: Date) => monthFormatter.format(date);

const noticeText =
  featuredNews?.data.title ??
  "We're hiring a post-doc who will conduct a bias & fairness study for LLMs. Please do not hesitate to contact to PI!";
