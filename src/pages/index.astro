  <!-- Research Areas Section -->
  <section class="section research-areas">
    <div class="research-grid-bg"></div>
    <div class="container">
      <p class="section-title">Research Areas</p>
      <p class="section-subtitle">The main research topics of our group include, <strong>but not limited to:</strong></p>
      <div class="research-grid">
        <div class="research-card">
          <div class="card-number">01</div>
          <div class="card-icon">ðŸŒ»</div>
