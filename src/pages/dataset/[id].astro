---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

type DatasetEntry = CollectionEntry<'datasets'>;

export async function getStaticPaths() {
  const datasets = await getCollection('datasets');
  return datasets.map((dataset) => ({
    params: { id: dataset.slug },
    props: { dataset },
  }));
}

const { dataset } = Astro.props as { dataset: DatasetEntry };
const { Content } = await dataset.render();

const hasThumbnail = Boolean(dataset.data.thumbnail);
const hasLinks = Boolean(dataset.data.paperUrl || dataset.data.downloadUrl);
const overviewClasses = ['overview-grid'];

if (!hasThumbnail) {
  overviewClasses.push('overview-grid--single');
}
---

<BaseLayout title={`${dataset.data.title} - Dataset`}>
  <Header slot="header" />
  
  <div class="page-header">
    <div class="page-header-content">
      <a href="/dataset" class="back-button">← Back to Datasets</a>
      <h1>{dataset.data.title}</h1>
      {dataset.data.subtitle && <p class="page-subtitle">{dataset.data.subtitle}</p>}
    </div>
  </div>

  <article class="dataset-detail">
    <div class="container">
      <section class="detail-overview">
        <div class={overviewClasses.join(' ')}>
          {hasThumbnail && (
            <div class="overview-media">
              <img src={dataset.data.thumbnail} alt={`${dataset.data.title} thumbnail`} loading="lazy" />
            </div>
          )}
          <div class="overview-content">
            <h3 class="overview-heading">Summary</h3>
            <p class="overview-text">{dataset.data.description}</p>
          </div>
        </div>
      </section>

      <section class="detail-section">
        <div class="dataset-markdown">
          <Content />
        </div>
      </section>

      {hasLinks && (
        <section class="download-section">
          <div class="download-links">
            {dataset.data.paperUrl && (
              <a href={dataset.data.paperUrl} class="download-link" target="_blank" rel="noopener">
                <span>View Paper</span>
              </a>
            )}
            {dataset.data.downloadUrl && (
              <a href={dataset.data.downloadUrl} class="download-link primary" target="_blank" rel="noopener">
                <span>Download</span>
              </a>
            )}
          </div>
        </section>
      )}
    </div>
  </article>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .page-header {
    min-height: 30vh;
    background-image: url('/ewha.gif');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    color: white;
    position: relative;
    padding: 2.5rem 0;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      repeating-linear-gradient(
        0deg,
        rgba(255, 255, 255, 0.08) 0px,
        transparent 1px,
        transparent 40px,
        rgba(255, 255, 255, 0.08) 41px
      ),
      repeating-linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.08) 0px,
        transparent 1px,
        transparent 40px,
        rgba(255, 255, 255, 0.08) 41px
      );
    pointer-events: none;
    z-index: 1;
  }

  .page-header-content {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1000px;
    padding: 0 60px;
    text-align: left;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.15rem;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .page-subtitle {
    font-size: 0.9rem;
    font-weight: 300;
    opacity: 0.95;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.15);
    margin: 0;
  }

  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 300;
    margin-bottom: 1.2rem;
    transition: all 0.2s ease;
    letter-spacing: 0.3px;
  }

  .back-button:hover {
    color: white;
    transform: translateX(-3px);
  }

  .dataset-detail {
    padding: 4rem 0;
    background: white;
  }

  .detail-overview {
    margin-bottom: 3rem;
  }

  .overview-grid {
    display: grid;
    grid-template-columns: minmax(0, 320px) minmax(0, 1fr);
    gap: 2.5rem;
    align-items: start;
  }

  .overview-grid--single {
    grid-template-columns: minmax(0, 1fr);
  }

  .overview-media {
    border-radius: 12px;
    overflow: hidden;
    background: rgba(0, 70, 42, 0.08);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  }

  .overview-media img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .overview-content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .overview-heading {
    font-size: 0.85rem;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #00462A;
    margin: 0;
  }

  .overview-text {
    font-size: 0.95rem;
    color: #444;
    line-height: 1.7;
    margin: 0;
  }

  .detail-section {
    margin-bottom: 3rem;
  }

  .dataset-markdown {
    display: grid;
    gap: 1.2rem;
    font-size: 0.95rem;
    line-height: 1.75;
    color: #414141;
  }

  .dataset-markdown h2,
  .dataset-markdown h3,
  .dataset-markdown h4 {
    color: #1a2a20;
    font-weight: 600;
  }

  .dataset-markdown h2 {
    font-size: 1.5rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .dataset-markdown h3 {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .dataset-markdown h4 {
    font-size: 1.05rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .dataset-markdown p {
    margin: 0;
  }

  .dataset-markdown ul,
  .dataset-markdown ol {
    padding-left: 1.2rem;
    margin: 0.5rem 0 0.5rem 0;
  }

  .dataset-markdown li {
    margin-bottom: 0.3rem;
  }

  /* Image size utilities */
  .dataset-markdown .img-small {
    width: 30%;
    max-width: 200px;
  }

  .dataset-markdown .img-medium {
    width: 50%;
    max-width: 300px;
  }

  .dataset-markdown .img-large {
    width: 60%;
    max-width: 400px;
  }

  /* Image grid layouts */
  .dataset-markdown :global(.img-grid-2) {
    display: grid;
    grid-template-columns: repeat(2, auto);
    gap: 1rem;
    margin: 1.5rem 0;
    overflow-x: auto;
    overflow-y: hidden;
    padding-bottom: 0.5rem;
  }

  .dataset-markdown :global(.img-grid-2) img {
    height: 300px !important;
    width: auto !important;
    max-width: none !important;
    margin: 0 !important;
    display: block !important;
    object-fit: contain !important;
  }

  .dataset-markdown :global(.img-grid-3) {
    display: grid;
    grid-template-columns: repeat(3, auto);
    gap: 1rem;
    margin: 1.5rem 0;
    overflow-x: auto;
    overflow-y: hidden;
    padding-bottom: 0.5rem;
  }

  .dataset-markdown :global(.img-grid-3) img {
    height: 250px !important;
    width: auto !important;
    max-width: none !important;
    margin: 0 !important;
    display: block !important;
    object-fit: contain !important;
  }

  /* 스크롤바 스타일링 */
  .dataset-markdown :global(.img-grid-2)::-webkit-scrollbar,
  .dataset-markdown :global(.img-grid-3)::-webkit-scrollbar {
    height: 8px;
  }

  .dataset-markdown :global(.img-grid-2)::-webkit-scrollbar-track,
  .dataset-markdown :global(.img-grid-3)::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 4px;
  }

  .dataset-markdown :global(.img-grid-2)::-webkit-scrollbar-thumb,
  .dataset-markdown :global(.img-grid-3)::-webkit-scrollbar-thumb {
    background: #a4a8a8;
    border-radius: 4px;
  }

  .dataset-markdown :global(.img-grid-2)::-webkit-scrollbar-thumb:hover,
  .dataset-markdown :global(.img-grid-3)::-webkit-scrollbar-thumb:hover {
    background: #003520;
  }

  /* Responsive grid layouts */
  @media (max-width: 768px) {
    .dataset-markdown :global(.img-grid-2),
    .dataset-markdown :global(.img-grid-3) {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  .download-section {
    margin-top: 2rem;
  }

  .download-links {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .download-link {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    padding: 0.7rem 1.1rem;
    border-radius: 25px;
    border: 1px solid rgba(0, 70, 42, 0.2);
    color: #00462A;
    background: white;
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 500;
    transition: all 0.25s ease;
  }

  .download-link.primary {
    background: #00462A;
    color: white;
    border-color: #00462A;
  }

  .download-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 18px rgba(0, 70, 42, 0.18);
  }

  @media (max-width: 900px) {
    .overview-grid {
      grid-template-columns: minmax(0, 1fr);
      gap: 1.5rem;
    }

    .overview-media {
      max-width: 400px;
    }
  }

  @media (max-width: 768px) {
    .page-header {
      background-attachment: scroll;
      background-position: center 20%;
      background-size: auto;
    }

    .page-header-content {
      padding: 0 20px;
    }

    .back-button {
      font-size: 0.8rem;
      margin-bottom: 0.8rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .page-subtitle {
      font-size: 0.85rem;
    }

    .dataset-detail {
      padding: 3rem 0;
    }

    .overview-heading {
      font-size: 0.75rem;
    }

    .overview-text {
      font-size: 0.85rem;
      line-height: 1.6;
    }

    .dataset-markdown {
      font-size: 0.85rem;
      line-height: 1.65;
    }

    .dataset-markdown h2 {
      font-size: 1.25rem;
      margin-top: 2rem;
    }

    .dataset-markdown h3 {
      font-size: 1.1rem;
      margin-top: 1.5rem;
    }

    .dataset-markdown h4 {
      font-size: 0.95rem;
      margin-top: 1.25rem;
    }
  }
</style>
