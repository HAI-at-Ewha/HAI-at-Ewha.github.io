---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const datasets = (await getCollection('datasets')).sort(
  (a, b) => a.data.order - b.data.order
);
---

<BaseLayout title="Dataset">
  <Header slot="header" />
  
  <div class="page-header">
    <div class="page-header-content">
      <h1>Datasets</h1>
      <p class="page-subtitle">Research datasets and resources</p>
    </div>
  </div>

  <section class="section datasets-section">
    <div class="container">
      <div class="datasets-grid">
        {datasets.map((dataset) => (
          <a href={`/dataset/${dataset.slug}`} class="dataset-card">
            <div class="dataset-thumbnail">
              {dataset.data.thumbnail ? (
                <img src={dataset.data.thumbnail} alt={dataset.data.title} />
              ) : (
                <div class="dataset-thumbnail-placeholder">Image coming soon</div>
              )}
            </div>
            <div class="dataset-content">
              <h3 class="dataset-title">{dataset.data.title}</h3>
              <p class="dataset-description">{dataset.data.description}</p>
              <span class="more-link">More â†’</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</BaseLayout>

<style>
  .page-header {
    min-height: 30vh;
    background-image: url('/ewha.gif');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    color: white;
    position: relative;
    padding: 2.5rem 0;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      repeating-linear-gradient(
        0deg,
        rgba(255, 255, 255, 0.08) 0px,
        transparent 1px,
        transparent 40px,
        rgba(255, 255, 255, 0.08) 41px
      ),
      repeating-linear-gradient(
        90deg,
        rgba(255, 255, 255, 0.08) 0px,
        transparent 1px,
        transparent 40px,
        rgba(255, 255, 255, 0.08) 41px
      );
    pointer-events: none;
    z-index: 1;
  }

  .page-header-content {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1000px;
    padding: 0 60px;
    text-align: left;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.15rem;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
  }

  .page-subtitle {
    font-size: 0.9rem;
    font-weight: 300;
    opacity: 0.95;
    text-shadow: 0 1px 4px rgba(0, 0, 0, 0.15);
    margin: 0;
  }

  .datasets-section {
    padding: 4rem 0;
    background: white;
  }

  .datasets-grid {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .dataset-card {
    display: grid;
    grid-template-columns: 320px 1fr;
    gap: 2rem;
    background: white;
    border-radius: 8px;
    padding: 1rem;
    transition: all 0.3s ease;
    border: 1px solid rgba(0, 70, 42, 0.2);
    text-decoration: none;
    color: inherit;
  }

  .dataset-card:hover {
    border-color: #00462A;
  }

  .dataset-card:hover .dataset-title {
    color: #2d5f4f;
  }

  .dataset-card:hover .more-link {
    transform: translateX(5px);
  }

  .dataset-thumbnail {
    width: 320px;
    height: 240px;
    border-radius: 6px;
    overflow: hidden;
    background: #f5f5f5;
  }

  .dataset-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .dataset-thumbnail-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f0f2f1;
    color: #7d9188;
    font-size: 0.85rem;
    letter-spacing: 0.05em;
    text-transform: uppercase;
  }

  .dataset-content {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .dataset-title {
    font-size: 1.25rem;
    color: #00462A;
    margin-bottom: 0.8rem;
    font-weight: 700;
    transition: color 0.2s ease;
  }

  .dataset-description {
    color: #555;
    line-height: 1.7;
    margin-bottom: 1rem;
    font-size: 0.95rem;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .more-link {
    display: inline-flex;
    align-items: center;
    color: #00462A;
    font-weight: 600;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  @media (max-width: 768px) {
    .page-header {
      background-attachment: scroll;
      background-position: center 20%;
      background-size: auto;
    }

    .page-header-content {
      padding: 0 20px;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .page-subtitle {
      font-size: 0.85rem;
    }

    .dataset-card {
      grid-template-columns: 1fr;
      gap: 1.5rem;
      padding: 1.5rem;
    }

    .dataset-thumbnail {
      width: 100%;
      height: 200px;
    }

    .dataset-title {
      font-size: 1.2rem;
    }

    .dataset-description {
      -webkit-line-clamp: 2;
    }
  }
</style>
